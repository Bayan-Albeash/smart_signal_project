# ملف إعداد البيئة المحسن لمشروع SmartSignal AI
# Enhanced Environment Configuration for SmartSignal AI Project

# ==============================================
# إعدادات Google Cloud الأساسية
# Google Cloud Basic Configuration  
# ==============================================

# معرف مشروع Google Cloud (مطلوب)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# مفتاح Google Maps API (للخرائط)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# مفتاح Gemini AI API (للذكاء الاصطناعي)  
GEMINI_API_KEY=your-gemini-api-key-here

# مفتاح Google API العام
GOOGLE_API_KEY=your-gemini-api-key-here

# موقع خدمات Google Cloud
GOOGLE_CLOUD_LOCATION=us-central1

# ==============================================
# إعدادات Frontend (React + Vite)
# Frontend Configuration
# ==============================================

VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
VITE_GEMINI_API_KEY=your-gemini-api-key-here
VITE_API_BASE_URL=http://localhost:5000/api
VITE_WEBSOCKET_URL=ws://localhost:8765

# ==============================================
# إعدادات الخوادم والمنافذ
# Server and Port Configuration
# ==============================================

# منافذ الخوادم
API_HOST=0.0.0.0
API_PORT=5000
POLICY_ENGINE_PORT=8000
FRONTEND_PORT=5173
WEBSOCKET_PORT=8765

# منفذ الخادم الرئيسي (للنشر)
PORT=5000

# ==============================================
# إعدادات WebSocket المحسنة
# Enhanced WebSocket Configuration
# ==============================================

# إعدادات الاتصال
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10
WEBSOCKET_CLOSE_TIMEOUT=10

# فترات التحديث (بالثواني)
WS_SIMULATION_UPDATE_INTERVAL=15
WS_TOWER_DATA_UPDATE_INTERVAL=20
WS_KPI_UPDATE_INTERVAL=25
WS_ANALYTICS_UPDATE_INTERVAL=35
WS_ALERT_CHECK_INTERVAL=40

# إعدادات الأداء
WS_MAX_CONNECTIONS=100
WS_MESSAGE_QUEUE_SIZE=1000
WS_ENABLE_COMPRESSION=true
WS_ENABLE_PERFORMANCE_MONITORING=true

# اللغة والتوطين
WS_DEFAULT_LANGUAGE=ar
WS_ENABLE_RTL_SUPPORT=true

# ==============================================
# إعدادات BigQuery المحسنة
# Enhanced BigQuery Configuration
# ==============================================

# مشروع BigQuery
BQ_PROJECT=your-bigquery-project-id

# مجموعة البيانات الرئيسية
BQ_DATASET=smart_signal_analytics

# الجداول المختلفة
BQ_TABLE=tower_metrics
BQ_POLICY_TABLE=policy_logs
BQ_DECISIONS_TABLE=decisions
BQ_PERFORMANCE_TABLE=performance_metrics

# موقع البيانات
BIGQUERY_LOCATION=US

# ==============================================
# إعدادات Cloud Storage
# Cloud Storage Configuration
# ==============================================

# اسم bucket التخزين
STORAGE_BUCKET_NAME=your-gcp-project-id-smart-signal-storage
STORAGE_LOCATION=us-central1
BACKUP_RETENTION_DAYS=30

# ==============================================
# إعدادات قاعدة البيانات المحلية
# Local Database Configuration
# ==============================================

DATABASE_URL=sqlite:///smartsignal.db
DATABASE_TYPE=sqlite

# ==============================================
# إعدادات التطوير والبيئة
# Development and Environment Settings
# ==============================================

# بيئة التطبيق
DEBUG=True
FLASK_ENV=development
NODE_ENV=development

# تفعيل البيانات التجريبية
ENABLE_MOCK_DATA=True
TESTING_MODE=False

# ==============================================
# إعدادات CORS والأمان
# CORS and Security Settings
# ==============================================

# النطاقات المسموحة
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5000
CORS_ALLOW_ALL=True

# مفتاح التشفير
SECRET_KEY=smartsignal-ai-secret-key-change-in-production

# تفعيل HTTPS
FORCE_HTTPS=False

# ==============================================
# إعدادات النماذج والذكاء الاصطناعي
# ML Models and AI Configuration
# ==============================================

# مسارات النماذج
MODEL_PATH=./ml-models/tower_predictor.pkl
XGBOOST_MODEL_PATH=./ml-models/model.bst

# إعدادات Vertex AI
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL_NAME=smartsignal-xgboost
VERTEX_AI_ENDPOINT_NAME=smartsignal-endpoint
VERTEX_AI_MACHINE_TYPE=n1-standard-2

# ==============================================
# إعدادات المحاكاة والاختبار
# Simulation and Testing Configuration
# ==============================================

# إعدادات المحاكاة الافتراضية
DEFAULT_NUM_TOWERS=10
DEFAULT_NUM_USERS=150  
DEFAULT_TOWER_CAPACITY=200

# عدد الأبراج التجريبية
MOCK_TOWERS_COUNT=10

# ==============================================
# إعدادات الأداء والتحسين
# Performance and Optimization Settings
# ==============================================

# تفعيل التخزين المؤقت
ENABLE_CACHING=True
CACHE_MAX_SIZE=1000
CACHE_TTL_SECONDS=300

# تفعيل ضغط البيانات
ENABLE_DATA_COMPRESSION=True

# عدد العمال للمعالجة غير المتزامنة
ASYNC_WORKERS_COUNT=10

# عدد الاتصالات القصوى للWebSocket
MAX_WEBSOCKET_CONNECTIONS=100
WEBSOCKET_TIMEOUT=300

# ==============================================
# إعدادات المراقبة والسجلات
# Monitoring and Logging Settings
# ==============================================

# مستوى السجلات
LOG_LEVEL=INFO

# تفعيل مراقبة الأداء
ENABLE_PERFORMANCE_MONITORING=True
PERFORMANCE_LOG_INTERVAL=60

# تفعيل التنبيهات
ENABLE_ALERTS=True

# ==============================================
# إعدادات النشر والإنتاج
# Deployment and Production Settings
# ==============================================

# إعدادات Gunicorn
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_PRELOAD_APP=True

# ==============================================
# إعدادات اختيارية للتكامل الخارجي
# Optional External Integration Settings
# ==============================================

# تكامل Slack
SLACK_WEBHOOK_URL=

# تكامل Discord  
DISCORD_WEBHOOK_URL=

# إيميل المدير
ADMIN_EMAIL=admin@your-domain.com

# مفتاح SendGrid
SENDGRID_API_KEY=